RewriteEngine On
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d

# Bloqueia o acesso a arquivos .htaccess
<Files .htaccess>
    order allow,deny
    deny from all
</Files>

# Bloqueia os arquivos do composer
<Files composer.json>
    order allow,deny
    deny from all
</Files>

# Bloqueia os arquivos do composer
<Files .env>
    order allow,deny
    deny from all
</Files>

# Bloqueia listagem de diret√≥rios
Options All -Indexes

# Errors
ErrorDocument 403 error_redirect.php
ErrorDocument 404 error_redirect.php
ErrorDocument 500 error_redirect.php